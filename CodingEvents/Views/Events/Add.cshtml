@using CodingEvents.ViewModels;

@model AddEventViewModel;

<h1>Add Event</h1>

<form method="post">
    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>

    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" />
        <span asp-validation-for="Location"></span>
    </div>

    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="NumberOfAttendees"></label>
        <input asp-for="NumberOfAttendees" />
        <span asp-validation-for="NumberOfAttendees"></span>
    </div>

    <div asp-controller="Events" asp-action="Add" class="form-group">
        <label asp-for="CategoryId">Event Types</label>
        <select asp-for="CategoryId" asp-items="Model.Categories"></select>
        
    </div>

    <input type="submit" value="Add Event" />
</form>
