@using CodingEvents.Models

@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>

<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>



@if (Model.Count == 0)
{
    <p>No Events Yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Event</th>
                <th scope="col">Description</th>
                <th scope="col">Contact Email</th>
                <th scope="col">Location</th>
                <th scope="col">Number of Attendees</th>
                <th scope="col">Category</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var activity in Model)
            {
            <tr>
                <td>@activity.Id</td>
                <td><a asp-controller="Events" asp-action="Detail" asp-route-id="@activity.Id">@activity.Name</a></td>
                <td>@activity.Description</td>
                <td>@activity.ContactEmail</td>
                <td>@activity.Location</td>
                <td>@activity.NumberOfAttendees</td>
                <td>@activity.Category.Name</td>




                <td><a asp-controller="Events" asp-action="Edit" asp-route-id="@activity.Id">Edit Event</a></td> @*Question 11*@
            </tr>
            }
        </tbody>
    </table>
}

