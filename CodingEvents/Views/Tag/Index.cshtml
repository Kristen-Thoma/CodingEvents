@using CodingEvents.Models
@model List<Tag>

<h1>All Event Tags</h1>

@if (Model.Count == 0)
{
    <p>No Tags Yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tag Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.Id</td>
                    <td><a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}
