@using CodingEvents.Models
@model List<EventCategory> 

<h1>All Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No Events Yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Id</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.Id</td>
                    <td>@activity.Name</td>
                </tr>
            }
        </tbody>
    </table>
}